<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alltransactionpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/alltrantoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_red_900"
            app:title="All Transactions"
            app:titleTextColor="@color/material_drawer_dark_header_selection_text">


        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alltransacrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_grey_300" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>